<div class='row'>
	<div class='col-ex-12'>
		<%= form_for(obj, :html => {class: "form-horizontal", role: :"form"}) do |f| %>

		<div class="container">
			<div class="well well-lg">
				<div class="col-sm-6">
					<div class="form-group">
							<label for="field_1">Project Name</label>
						<div class="textfield" style="width:85%">
							<%= f.text_field :name, class: "form-control", placeholder: "Field 1" %>
						</div>
					</div>

					<div class="form-group">

						<label for="field_2">Company registration number</label>

						<div class="textfield" style="width:85%">
							<%= f.text_field :required_talents, class: "form-control", placeholder: "Field 2" %>
						</div>

					</div>

				</div>

				<div class="col-sm-6">
						<div class="form-group">

							<label for="field_1">Project Description</label>
							<div class="textfield">
								<%= f.text_area :description, class: "form-control", placeholder: "Field 1" %>
							</div>

						</div>
				</div>
			  <div class="form-inline">
   				<%= f.check_box :accept_tnc, class: 'form-control' %>
   				<%= f.label :subscribed, "I have read and understand the Terms of Services" %>
				</div>


				<div class="form-group">
					<div class="col-sm-offset-5 col-sm-10">
						<%= f.submit class: 'btn btn-primary btn-lg' %>
					</div>
				</div>


		</div>


		<% end %>

	</div>
</div>