<%= form_for :companies, url: companies_path do |form| %>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, type: 'email', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, type: 'name', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control', rows: 3 %>
  </div>
  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :logo %>
    <%= form.file_field :logo %>
  </div>
  <div class="form-group">
    <%= form.label :introduction_video %>
    <%= form.file_field :introduction_video %>
  </div>
  

  <div class="form-group">
    <%= form.submit 'Sign Up', :class => 'btn btn-primary'%>
  </div>
<% end %>
