<div class='row'>
	<div class='col-ex-12'>
		<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}, url: sessions_path) do |form| %>

			<div class="container">
				<div class="well well-lg">
					<div class="col-sm-6">
						<div class="form-group">
							<%= form.label :email %>
							<div class="textfield" style="width:85%">
								<%= form.email_field :email, class: "form-control", placeholder: "Email", id: "inputEmail3" %>
							</div>
						</div>

						<div class="form-group">
							<%= form.label :password %>
							<div class="textfield" style="width:85%">
								<%= form.password_field :password, class: "form-control", placeholder: "Password", id: "inputPassword3" %>
							</div>
						</div>
					</div>

					<div class="col-sm-6">
						<div class="form-group">
							<%= form.label :address %>
							<div class="textfield">
								<%= form.text_area :address, class: "form-control", placeholder: "Address" %>
							</div>
						</div>
					</div>

				  <div class="form-inline">
	   				<%= form.check_box :accept_tnc, class: 'form-control' %>
	   				<%= form.label :subscribed, "I have read and understand the Terms of Services" %>
					</div>

					<div class="form-group">
						<div class="col-sm-offset-5 col-sm-10">
							<%= form.submit class: 'btn btn-primary btn-lg' %>
						</div>
					</div>
			</div>
		<% end %>
	</div>
</div>